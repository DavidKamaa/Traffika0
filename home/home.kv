# database.kv
<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<HomeWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Traffika'
            size_hint_x: .9
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            text: 'userA'
            color: (1,1,1,1)
            size_hint_x: .1
            underline: True
            on_release: root.logout()




    FloatLayout:
    	id:info
        canvas.before:
            Color:
                rgba:(.80,.33,.40,1)
            Rectangle:
                size:self.size
                pos:self.pos
        TextInput:
            id: text_input
            multiline: True
            hint_text: 'Enter text...'
            size_hint: .9, .25
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        Button:
            text: 'Submit'
            on_press: app.submit_text(self)
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}


    BoxLayout:
        id: footer
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (.06, .47, .47, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: current
            size_hint_y: None
            height: 45
            canvas.before:
                Color:
                    rgba: (1,1,1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                id:home
                text: 'Home'
                background_normal: 'home.png'
                background_down: 'home.png'
                size_hint_x: .2

            Label:
                text:''
                size_hint_x: .2

            Button:
                id: search
                text: 'Search'
                background_normal: 'search.png'
                background_down: 'search.png'
                size_hint_x: .2

            Label:
                text:''
                size_hint_x: .2

            Button:
                id: view
                text: 'View'
                background_normal: 'account.png'
                background_down: 'account.png'
                size_hint_x: .2


